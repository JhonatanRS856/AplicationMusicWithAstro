---
import { ViewTransitions } from "astro:transitions"

import Aside from '../components/Aside.astro';
import Player from '../components/Player.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions fallback="none" />
	</head>
	<body>
		<div id="appContainer">
			<Aside />
			<main>
				<audio src="" id="audioElement"></audio>
				<slot />
			</main>
			<Player />
		</div>
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap');

	:root {
		--color-white: #fff;
		--color-black: rgb(29, 27, 27);
		--color-gray: #b0b0b0;

		--color-success: #00bf8e;
		--color-warning: #f7c94b;
		--color-danger: #f75842;

		--main-color: #68cdea;

		--color-dark: rgb(25, 23, 23);
		--color-dark-variant: rgb(40, 40, 40);
		--color-light-dark: rgb(53, 52, 52);

		--transition: all .3s ease-in-out;
		--border-radius: 6px;

		--hover-color: #ffffff1a;
		--boder-color: rgb(40, 40, 40);
		--box-s: 1px 3px 3px #2c2c2cc0;
	}

	html {
		font-family: system-ui, sans-serif;
		background: #191919;
		font-family: 'Quicksand', system-ui, sans-serif;
		overflow: hidden;
		scroll-behavior: smooth;
	}

	body{
		width: 100%;
		overflow: hidden;
		color: var(--color-white);
	}

	img{
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}

	#appContainer{
		@apply grid w-full grid-rows-[auto_1fr_auto] md:grid-cols-[35%_1fr] md:grid-rows-[1fr_auto] lg:grid-cols-[340px_1fr];

		height: 100dvh;
	}

	main{
		@apply w-full flex overflow-x-hidden;
		
		& > section{
			overflow-y: auto;

			&::-webkit-scrollbar{
			display: none;
			}
		}
	}

	.btn{
		@apply flex items-center p-1 rounded-md duration-300 transition-colors hover:bg-hoverColor;
	}

	#abrirNav{
		@apply md:hidden;
	}

	.inlineText, .brText{
		display: -webkit-box;
        
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
	}

	.inlineText{
		-webkit-line-clamp: 1;
	}

	.brText{
		-webkit-line-clamp: 2;
	}

	

	@media (prefers-reduced-motion: reduce){
		html{
			scroll-behavior: auto;
		}
	}
</style>
<script>
	const audio = new Audio();
	audio.src = "../../public/music/loveyou.mp3";
	audio.load();
</script>